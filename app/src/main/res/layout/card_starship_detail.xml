<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="4dp"
    card_view:cardCornerRadius="4dp">


    <TableLayout android:id="@+id/detailForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                android:stretchColumns="1">
        <TableRow android:paddingBottom="4dp">
        <TextView
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="Model:"/>
        <TextView android:id="@+id/ship_detail_model"
                  android:layout_column="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="fill_horizontal"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow android:paddingBottom="4dp">
        <TextView
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="Manufacturer:"/>
        <TextView android:id="@+id/ship_detail_mfr"
                  android:layout_column="1"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_gravity="fill_horizontal"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow android:paddingBottom="4dp">
        <TextView
            android:layout_gravity="top|left"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="Cost (credits):"/>
        <TextView android:id="@+id/ship_detail_cost"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>

        <TableRow android:paddingBottom="4dp">
        <TextView
            android:layout_gravity="top|left"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="Hyperdrive rating:"/>
        <TextView android:id="@+id/ship_detail_hyperdrive"
                  android:layout_gravity="top|left"/>
        </TableRow>

        <TableRow>
        <TextView
            android:layout_gravity="top|left"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="Starship class:"/>
        <TextView android:id="@+id/ship_detail_class"
                  android:layout_width="0dp"
                  android:layout_gravity="fill_horizontal"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary" />
    
</android.support.v7.widget.CardView>
